Sub test()
'On chosisit l'équipe à analyser
    Dim Nom_equipe As String
    Nom_equipe = InputBox("Entrez le nom de l'équipe à analyser")
    
'On regarde le nombre de matchs joués par cette équipe pour dimensionner notre tableau
    Worksheets("LeagueTableExport").Activate
    Dim a As Double, dimension As Double
    a = 0
    While Cells(1 + a, 1) <> 0
        If Cells(1 + a, 2) = Nom_equipe Then
            dimension = Cells(1 + a, 4)
        End If
        a = a + 1
    Wend

'on entre le nombre de buts par match dans un tableau
    Worksheets("TeamStatsExport").Activate
    Dim i As Double, t As touble
    Dim tab1(dimension)
    i = 0
    t = 0
    While Cells(1 + i, 1) <> 0
        If Cells(1 + i, 1) = Nom_equipe Then
            If Cells(1 + i, 4) = Nom_equipe Then
                tab1(t) = Cells(1 + i, 5)
                t = t + 1
            Else
                tab1(t) = Cells(1 + i, 6)
                t = t + 1
            End If
        i = i + 1
        End If
    Wend
End Sub
